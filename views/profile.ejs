<%- include('partials/header') -%>
<nav class="nav nav-pills nav-fill">
  <a class="nav-item nav-link text-white border border-white rounded bg-success" href="/feed">All Herbs</a>
  <a class="nav-item nav-link text-white border border-white rounded bg-success" href="/settings">Settings</a>
  <a class="nav-item nav-link text-white border border-white rounded bg-success" href="/logout">Logout</a>
</nav>
<div class="container">
  <div class="row">
      <div class="col-6">
          <div class="mt-5">
            <h2>Add an herb:</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="commonName" class="form-label">Common Name</label>
                  <input type="text" class="form-control" id="commonName" name="commonName">
              </div>
              <div class="mb-3">
                <label for="sciName" class="form-label">Scientific Name</label>
                <input type="text" class="form-control" id="sciName" name="sciName">
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Cultural Origin</label>
                <input type="text" class="form-control" id="origin" name="origin">
              </div>
              <div class="mb-3">
                <label for="zone" class="form-label">Planting Zone</label>
                <input type="text" class="form-control" id="zone" name="zone">
              </div>
              <div class="mb-3">
                <label for="type" class="form-label">Plant Type</label>
                <input type="text" class="form-control" id="type" name="type">
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-success" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled mt-5">
        <h2>Your herbs:</h2>
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6">
            <a class="text-success text-decoration-none" href="/post/<%= posts[i]._id%>">
              <h5><%= posts[i].commonName %></h5>
              <img class="img-fluid border border-success" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>